{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "baseUrl": ".",
    "rootDir": "./src",
    "module": "commonjs",
    "types": [
      "node"
    ],
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "paths": {
      "common-utils": [
        "../../packages/common-utils/src/index.ts"
      ]
    }
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ]
}