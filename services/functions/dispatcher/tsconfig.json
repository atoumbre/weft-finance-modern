{
  "compilerOptions": {
    "target": "ES2020",
    "lib": [
      "ES2020"
    ],
    "baseUrl": ".",
    "rootDir": "./", // Note: including parent dirs might require adjusting rootDir or using 'baseUrl'
    "module": "commonjs",
    "types": [
      "node"
    ],
    "strict": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": [
    "src/index.ts"
  ]
}
